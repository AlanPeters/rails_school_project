<%= form_with(model: section, local: true) do |form| %>
    <% if section.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

            <ul>
                <% section.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>


    <div>
        <%= form.label :semester %>
        <%= form.text_field :semester %>
    </div>
    <div>
        <%= form.label :classroom %>
        <%= form.text_field :classroom %>
    </div>
    <div>
        <%= form.label :time %>
        <%= form.time_field :time %>
    </div>
    <div>
        <%= form.label :professor_id %>
        <%= form.select :professor_id, @professors.collect { |p| [p.name, p.id] }, include_blank: true %>

    </div> 
    <div>
        <%= form.label :course_id %>
        <%= form.select :course_id, Course.all.collect { |c| [ c.name, c.id]},  include_blank: true   %>
    </div>
    <div class="actions">
        <%= form.submit %>
    </div>
<% end %>
