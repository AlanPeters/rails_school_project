<p id="notice"><%= notice %></p>

<h1>Enrollments</h1>

<table class="table">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Class time</th>
            <th>Professor</th>
            <th colspan="1"></th>
        </tr>
    </thead>

    <tbody>
        <% @enrollments.each do |enrollment| %>
            <tr>
                <td><%= enrollment.section.course.name %></td>
                <td><%= enrollment.section.time.strftime("%l:%M %p") %></td>
                <td><%= enrollment.section.professor.name %></td>
                <td><%= link_to 'Drop', enrollment, method: :delete, data: { confirm: 'Are you sure you wish to un-enroll?' } %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<br>

