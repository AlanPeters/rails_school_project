<p id="notice"><%= notice %></p>

<p>
<strong>Name:</strong>
<%= @course.name %>
</p>

<p>
<strong>Department:</strong>
<%= @course.department %>
</p>

<p>
<strong>Description:</strong>
<%= @course.description %>
</p>

<p>
<strong>Taught By:</strong>
<ul>
    <% @professors.each do |professor,sections|  %>
        <li><%= link_to professor.name, professor %></li>
        <ul>
            <% sections.each do |section| %>
                    <li><%= link_to section.time.strftime("%l:%M %p"), section %></li>
            <% end %>
        </ul>
    <% end %>
</ul>
</p>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>
